<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="MicaForEveryone.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MicaForEveryone.App.Controls"
    xmlns:local="using:MicaForEveryone.App">
    <Application.Resources>
        <XamlControlsResources>
            <XamlControlsResources.MergedDictionaries>
                <ResourceDictionary Source="/Controls/SettingsPageControl.xaml" />
                <ResourceDictionary Source="/Controls/WindowPickerButton.xaml" />
                <ResourceDictionary>
                    <Style TargetType="FontIcon">
                        <Setter Property="FontFamily" Value="{StaticResource SymbolThemeFontFamily}" />
                    </Style>
                </ResourceDictionary>
            </XamlControlsResources.MergedDictionaries>
        </XamlControlsResources>
    </Application.Resources>
</Application>
